{
  "name": "OpenPodcast Extension",
  "version": "1.4",
  "description": "Shows Spotify keys on openpodcast.dev to connect a Podcasters Dashboard with Open Podcast Analytics",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "manifest_version": 2,
  "permissions": [
    "cookies",
    "*://*.spotify.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.openpodcast.dev/*",
        "*://*.openpodcast.app/*",
        "*://localhost:*/*"
      ],
      "js": [
        "openpodcast.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://*.openpodcast.dev/*",
      "*://*.openpodcast.app/*",
      "*://localhost:*/*"
    ]
  }
}