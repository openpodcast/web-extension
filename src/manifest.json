{
  "name": "OpenPodcast Extension",
  "version": "1.2",
  "description": "Shows Spotify keys on openpodcast.dev to connect a Podcasters Dashboard with Open Podcast Analytics",
  "background": {
    "service_worker": "background.js"
  },
  "manifest_version": 3,
  "permissions": [
    "cookies"
  ],
  "host_permissions": [
    "*://*.spotify.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.openpodcast.dev/*",
        "*://*.openpodcast.app/*"
      ],
      "js": [
        "openpodcast.js"
      ],
      "run_at": "document_end"
    }
  ]
}