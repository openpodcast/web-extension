{
  "name": "OpenPodcast Extension",
  "version": "1.0",
  "description": "Retrieve needed keys and credentials for Spotify and Apple connector",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },  
  "manifest_version": 2,
	"permissions": [
		"cookies",
		"*://*.spotify.com/*"
	],
  "content_scripts": [
    {
      "matches": ["*://*.openpodcast.dev/*"],
      "js": ["openpodcast.js"],
      "run_at": "document_end"
    }
  ]  
}